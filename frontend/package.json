{
  "name": "telegram-broadcast-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "dev:host": "vite --port 3000 --host 0.0.0.0",
    "dev:keep": "node scripts/dev-keepalive.js",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "jest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "playwright test --config=playwright.config.ts --reporter=line",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:prod": "TEST_BASE_URL=https://sattva-streamer.top playwright test tests/e2e/api-health.spec.ts --config=playwright.config.ts",
    "test:e2e:headed": "playwright test --config=playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=playwright.config.ts --debug",
    "test:lh": "node scripts/landing-lh.mjs",
    "lighthouse:auth": "node scripts/lighthouse-auth.mjs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
