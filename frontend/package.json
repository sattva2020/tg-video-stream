    "sharp": "^0.34.5",
    "socket.io-client": "^4.6.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.2.1",
    "three": "0.164.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
